@model WebApplication1.Models.Book

<div class="container col-md-8 text-center mt-3">
    <h1 class="text text-danger">Add new book</h1>
    <form class="card p-2 bg-white" action="Create" method="post">
        <div class="form-group">
            <label class="text text-info">Book Name</label>
            <input class="form-control" asp-for="Name" />
            <span class="text text-danger" asp-validation-for="Name"></span>
        </div>
        <label>Select category</label>
        <select class="form-control" asp-for="CategoryId">
            <option>Selectn category</option>
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select><br />
        <span class="text text-danger" asp-validation-for="CategoryId"></span>
        <div class="form-group">
            <label asp-for="Author"></label>
            <input class="form-control" asp-for="Author" />
            <span class="text-black-50 text-danger" asp-validation-for="Author"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Type"></label><br />
            <input asp-for="Type" type="radio" value='PDF' />  PDF

            <input asp-for="Type" type="radio" value='PGV' /> PGV
        </div>
        <div class="form-group">
            <label asp-for="Datee"></label>
            <input class="form-control" asp-for="Datee" />
            <span class="text-black-50 text-danger" asp-validation-for="Datee"></span>
        </div>

        <div class="form-group">
            <label class="text text-info">Book Image</label>
            <input class="form-control" asp-for="Image" />
            <span class="text text-danger" asp-validation-for="Image"></span>
        </div>    
        <div class="form-group">
            <label asp-for="Price"></label>
            <input class="form-control" asp-for="Price" />
            <span class="text-black-50 text-danger" asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Add" />
        </div>
    </form>
</div>