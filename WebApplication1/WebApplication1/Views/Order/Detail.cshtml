@model WebApplication1.Models.Order

<center>
    <h1>Order number @Model.Id detail</h1>
</center>
<br />
<table class="table table-responsive">
    <tr>
        <th>Customer ID</th>
        <th>Customer Name</th>
        <th>Book Name</th>
        <th>Order Date</th>
        <th>Book quantity</th>
        <th>Total Price</th>
        <th>Payment method</th>
    </tr>
    <tr>
        <td>@Model.Id</td>
        <td>@User.Identity.Name</td>
        <td>
            <a asp-controller="Book" asp-action="Detail" asp-route-id="@Model.BookId">
                <img src="@Model.Book.Image" width="180" height="250" /><br />
                <h2>@Model.Book.Name</h2>
            </a>
        </td>
        <td>@Model.Order_Date.ToShortDateString()</td>
        <td>@Model.Quantity</td>
        <td>@(Model.Quantity * Model.Book.Price)</td>
        <td>@Model.Payment</td>
    </tr>
</table>
