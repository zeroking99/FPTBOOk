@model List<Category>
@if (User.Identity.IsAuthenticated && User.IsInRole("Administrator")){
    <center>
        <div class="container col-md-8 mt-3">
            <h1 class="text-success">Category List</h1><br />
            <a class="btn btn-warning" asp-action="Create">Create new category</a><br /><br />
            <table class="table-bordered" id="table_list">
                <tr>
                    <th>Category ID</th>
                    <th>Category Name</th>
                </tr>
                @foreach (var category in Model)
                {
                    <tr>
                        <td class="text">@category.Id</td>
                        <td class="text">@category.Name</td>
                        <td>
                            <a id="edit" class="btn btn-warning" asp-action="Edit" asp-route-id="@category.Id">Edit</a><br><br>
                            <a id="delete" class="btn btn-warning" asp-action="Delete" asp-route-id="@category.Id" onclick="  return confirm('Are you sure you want to delete this category?');">Delete</a>
                        </td>
                    </tr>
                }
            </table>

        </div><br />
    </center>
}
