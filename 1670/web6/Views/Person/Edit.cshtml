@model web6.Models.Person

<form class="text-center card p-3 bg-light" 
  method="post" asp-controller="Person" 
  asp-action="Edit">
    <h2 class="text-primary">Edit person</h2>
    <input type="hidden" name="id" value="@ViewBag.Id">
    <div class="form-group">
        <label class="text-success">Name</label> 
        <input class="form-control" asp-for="Name" required />
    </div>
    <div class="form-group">
        <label class="text-success">Age</label> 
        <input class="form-control" asp-for="Age" required />
    </div>
      <div class="form-group">
        <label class="text-success">Mobile</label> 
        <input class="form-control" asp-for="Mobile" required />
    </div>
      <div class="form-group">
        <label class="text-success">Image</label> 
        <input class="form-control" asp-for="Image" required />
    </div>
    <div class="form-group">
        <input class="btn btn-secondary" type="submit" value="Edit">
    </div>
</form> 