@model demo.Models.University

<div class="container text-center">
    <div class="row">
        <div class="col">
            <img src="@Model.Logo" width="300" height="300" />
            <h2 class="text text-success mt-3">@Model.Name</h2>
        </div>
        <div class="col">
            <table class="table table-bordered">
                <tr>
                    <th colspan="2">Student List</th>
                    <th>TOTAL: @Model.Students.Count</th>
                </tr>
                <tr>
                    <th>Student Id</th>
                    <th>Student Name</th>
                    <th>Student Avatar</th>
                </tr>
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td>@student.SId</td>
                        <td>@student.Name</td>
                        <td>
                            <a asp-controller="Student" asp-action="Detail" asp-route-id="@student.Id">
                                <img src="@student.Image" width="80" height="80">
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>