@model List<Admin>
<div class="form-group">
    <div class="row">
        <div class="col-form-label">         
            <div id="myCarousel" class="carousel slide" data-ride="carousel">

                <!-- Indicators -->
                <ul class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ul>

                <!-- The slideshow -->
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/books/Banner/1.png" alt="XeR" width="1000" , height="300">
                    </div>
                    <div class="carousel-item">
                        <img src="~/books/Banner/2.png" alt="XeX" width="1000" , height="300">
                    </div>
                    <div class="carousel-item">
                        <img src="~/books/Banner/3.jpg" alt="XeZ" width="1000" , height="300">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="carousel-control-prev" href="#myCarousel" data-slide="prev">
                    <span class="carousel-control-prev-icon"></span>
                </a>
                <a class="carousel-control-next" href="#myCarousel" data-slide="next">
                    <span class="carousel-control-next-icon"></span>
                </a>
            </div>
        </div>
    </div>
</div>
<table class="table-bordered text-center mt-3 mb-3 bg-light">
    <tr>
        <th class="h3 text-primary" colspan="4">Student List</th>
        <th>
            <a class="btn btn-success" asp-controller="Student" asp-action="Add">
                Add
            </a>
        </th>
    </tr>
    <tr>
        <th>Admin Id</th>
        <th>Admin Name</th>
        <th>Admin Email</th>
        <th>Admin Phone</th>

    </tr>
    @foreach (var ad in Model)
    {
        <tr>
            <td>@ad.Id</td>
            <td>@ad.Name</td>
            <td>@ad.Email</td>
            <td>@ad.Phone</td>
           
        </tr>
    }
</table>
